    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>bank-app-frontend</RootNamespace>
    <AssemblyName>$(AssemblyName.Replace(' ', '_'))</AssemblyName>
    <UserSecretsId>57e42ef6-4069-4380-8fa9-7072f78559e2</UserSecretsId>
